<Window x:Class="AutoClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eric's AutoClicker" Height="120" Width="425" 
        ShowInTaskbar="False" Closing="MainWindow_OnClosing" Icon="Icon.ico">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <Label>Press F2 to start/stop autoclicker</Label>
    
    <Label Grid.Row="1" Grid.Column="0">Milliseconds:</Label>
    <TextBox Grid.Row="1" Grid.Column="1" Name="MillisecondsEdit" />

    <Label Grid.Row="2" Grid.Column="0">Start/Stop Key:</Label>
    <TextBox Grid.Row="2" Grid.Column="1" Name="SelectedKeyEdit" IsReadOnly="True" KeyDown="SelectedKeyEdit_OnKeyDown" />
  </Grid>
</Window>
